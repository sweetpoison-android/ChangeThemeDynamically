<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChangeThemeDynamically" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlueTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="viewColor">@color/view_color_theme1</item>
        <item name="textColor">@color/text_color_theme1</item>
        <item name="backgroundColor">@color/background_color_theme1</item>
        <item name="textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="textName">You selected Blue Theme</item>
        <item name="buttonText">Blue Theme</item>
        <item name="buttonMargin">20dp</item>
    </style>

    <style name="PinkTheme" >
        <item name="viewColor">@color/view_color_theme2</item>
        <item name="textColor">@color/text_color_theme2</item>
        <item name="backgroundColor">@color/background_color_theme2</item>
        <item name="textSize">18sp</item>
        <item name="fontFamily">cursive</item>
        <item name="textName">You selected Pink Theme</item>
        <item name="buttonText">Pink Theme</item>
        <item name="buttonMargin">50dp</item>

    </style>

    <style name="RedTheme" >
    <item name="viewColor">@color/view_color_theme3</item>
    <item name="textColor">@color/text_color_theme3</item>
    <item name="backgroundColor">@color/background_color_theme3</item>
    <item name="textSize">18sp</item>
    <item name="fontFamily">sans-serif-condensed-light</item>
    <item name="textName">You selected Red Theme</item>
    <item name="buttonText">Red Theme</item>
    <item name="buttonMargin">50dp</item>
    </style>
</resources>